.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #1a1a1a;
  color: #fff;
}
.loading-text {
  margin-bottom: 40px;
  font-size: 16px;
  color: #aaa;
}
.btn {
  background-color: #d4a373;
  color: #000;
  width: 60%;
  margin-bottom: 20px;
  font-weight: bold;
}
.btn-secondary {
  background-color: #333;
  color: #fff;
}
